@model List<Pro.Models.Entities.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<a class="btn btn-primary" href="/student/create">Add Student</a>
<hr>
<h3>All Products</h3>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Description</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Id</td>
            <td>@p.Name</td>
            <td>@p.Price</td>
            <td>@p.Quantity</td>
            <td>@p.Description</td>
            <td><a href="/product/update/@p.Id" class="btn btn-success">Edit</a></td>
            <td><a class="btn btn-danger">Delete</a></td>
        </tr>
}
</table>


