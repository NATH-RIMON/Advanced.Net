@model Project.Models.Entities.SenderNumber

@{
    ViewBag.Title = "Edit";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">SMS Gateway</a></li>
                    <li class="breadcrumb-item"><a href="javascript: void(0);">SenderNumber</a></li>

                </ol>
            </div>
            <h4 class="page-title">Edit </h4>
        </div>
    </div>
</div>
<!-- end page title -->

<form action="/SenderNumber/Edit" method="post">

    @Html.AntiForgeryToken()
    <div class="row">
        <!-- end col -->

        <div class="col-lg-6">

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Error!</strong> @ViewBag.ErrorMessage
                </div>
            }
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    <strong>Success!</strong> @ViewBag.SuccessMessage
                </div>
            }

            <!-- end col-->

        <div class="card-box">




            <div class="form-group mb-3">
                <label for="product-meta-keywords">Number</label>
                <input type="text" class="form-control" value="@Model.Number.Trim()" name="Number" id="Number" placeholder="">
                @Html.ValidationMessageFor(m => m.Number, "", new { @class = "text-danger" })
            </div>



            <div class="form-group mb-3">
                <label for="product-meta-keywords">DeviceId</label>
                <input type="text" class="form-control" value="@Model.DeviceId.Trim()" name="DeviceId" id="DeviceId" placeholder="">
                @Html.ValidationMessageFor(m => m.DeviceId, "", new { @class = "text-danger" })
            </div>



            <div class="form-group mb-3">
                <label for="product-meta-keywords">ApiToken</label>
                <input type="text" class="form-control" value="@Model.ApiToken.Trim()" name="ApiToken" id="ApiToken" placeholder="">
                @Html.ValidationMessageFor(m => m.ApiToken, "", new { @class = "text-danger" })
            </div>


            @Html.HiddenFor(model => model.Id)


            <div class="text-center mb-3">
                <a href="/SenderNumber/Index" type="button" class="btn w-sm btn-light waves-effect">Cancel</a>
                <button type="submit" class="btn w-sm btn-success waves-effect waves-light">Save</button>
               
            </div>


        </div> <!-- end card-box -->



        </div> <!-- end col-->
    </div>
    <!-- end row -->
    <!-- end row -->

</form>