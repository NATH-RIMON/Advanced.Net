@model IEnumerable<Project.Models.Entities.Message>
@{
    ViewBag.Title = "Index";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">UBold</a></li>
                   
                    <li class="breadcrumb-item active">Messages</li>
                </ol>
            </div>
            <h4 class="page-title">Messages</h4>
        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">


                <div class="table-responsive">
                    <table class="table table-centered table-striped dt-responsive nowrap w-100" id="products-datatable">
                        <thead>
                            <tr>

                                <th>ID</th>
                                <th>Numbers</th>
                                <th>Message</th>
                                <th>SendTime</th>

                                <th>Status</th>
                                <th style="width: 75px;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td class="table-user">
                                        
                                        @item.Id
                                    </td>
                                    <td>@item.Numbers</td>
                                    <td>
                                        @item.MessageBody
                                    </td>
                                    <td>
                                        @item.SendTime
                                    </td>
                                    
                                    <td>
                                        @if(@item.Status == "Success")
                                        {
                                            <span class="badge badge-soft-success">@item.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-soft-warning">@item.Status</span>
                                        }


                                    </td>

                                    <td>
                                        <a href="javascript:void(0);" class="action-icon"> <i class="mdi mdi-square-edit-outline"></i></a>
                                        <a href="/Message/Delete/@item.Id" class="action-icon"> <i class="mdi mdi-delete"></i></a>
                                    </td>
                                </tr>

                            }

                            </tbody>
                    </table>
                </div>
            </div> <!-- end card-body-->
        </div> <!-- end card-->
    </div> <!-- end col -->
</div>
<!-- end row -->
